{
  "manifest_version": 3,
  "name": "OIIA Dance Party",
  "version": "1.0.0",
  "description": "Transform any webpage into a wild dance party! Watch as images, videos, and text elements spin, rotate, and dance across your screen in a chaotic visual celebration. Perfect for livening up boring websites or just having some fun.",
  "action": {
    "default_popup": "public/popup.html",
    "default_icon": {
      "16": "public/icons/icon16.png",
      "48": "public/icons/icon48.png",
      "128": "public/icons/icon128.png"
    }
  },
  "permissions": ["tabs", "activeTab", "scripting"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["public/oiia.png", "public/oiia.mp3"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
